<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <% unless user == current_user %>
        <li>
          <span class="profile-link">
            <div class = 'container'>
              <h1><%= link_to user.name,  user_path(user), class: 'profile-link' %></h1>
              <%= render 'friendships/friend_request_form', user: user %>
              <% if requestee?(user)%>
                <%= render 'friendships/accept_request_form', user: user, submit_text: 'Accept' %>
              <% end %>
              <% if pending_friend?(user) || requestee?(user)%>
                <%= render 'friendships/reject_request_form', user: user, submit_text: 'Cancel' %>
              <% end %>
            </div>
          </span>
        </li>
      <% end %>
    <% end %>
  </ul>
</section>
